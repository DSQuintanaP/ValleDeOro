@model IEnumerable<ValleDeOro.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Registrar Reserva</a>
    <a class="btn btn-outline-primary" asp-controller="Abonoes" asp-action="Create">Registrar Abono</a>
</p>
<table class="table table-striped" id="TablaIndice">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFinalizacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstadoReservaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetodoPagoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroDocumentoClienteNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFinalizacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoReservaNavigation.IdEstadoReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetodoPagoNavigation.IdMetodoPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NroDocumentoClienteNavigation.NroDocumento)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdReserva">Editar</a> |
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.IdReserva">Detalles</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdReserva">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
